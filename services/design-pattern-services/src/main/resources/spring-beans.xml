	<!-- map config match setCronTasks(Map cronTasks) -->
	<bean class="org.springframework.scheduling.config.ScheduledTaskRegistrar">  
		<property name="cronTasks">
			<map>
				<entry key-ref="helloSchedule" value="0/5 * * * * *"/>
			</map>
		</property>
	</bean>
	
	
</beans>